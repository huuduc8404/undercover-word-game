{
  "name": "undercover-word-game-server",
  "version": "1.0.0",
  "description": "WebSocket server for the Undercover Word Game",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "build": "tsc",
    "build:frontend": "cd .. && npm run build",
    "build:all": "npm run build:frontend && npm run build",
    "postbuild:all": "mkdir -p ./public && cp -r ../dist/* ./public/",
    "lint": "eslint . --ext .ts",
    "tunnel": "bash start-with-tunnel.sh",
    "tunnel:win": "start-with-tunnel.bat"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.9",
    "eslint": "^8.48.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}